<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <TextView
        android:id="@+id/tv_transaction_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_transaction_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transf. Beltrano"
        app:layout_constraintStart_toStartOf="@id/tv_transaction_value"
        app:layout_constraintTop_toBottomOf="@id/tv_transaction_value" />

    <TextView
        android:id="@+id/tv_transaction_money_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- R$ 500,00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_transaction_value" />
</androidx.constraintlayout.widget.ConstraintLayout>